<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/layout_userinfo"
              android:background="@color/gray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/topbar"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <RelativeLayout
        android:id="@+id/layout_img"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_username"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text=""
            android:drawableLeft="@mipmap/icon_username"
            android:layout_centerVertical="true"
            android:layout_width="150dp"
            android:layout_height="40dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginRight="10dp"
            android:id="@+id/img_avatar"
            android:layout_toLeftOf="@+id/img_right"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/img_right"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_right"
            android:layout_width="20dp"
            android:layout_height="20dp"/>


    </RelativeLayout>
    <TextView
        android:layout_marginLeft="20dp"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/layout_changepassword"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="修改密码"
            android:drawableLeft="@mipmap/icon_lock"
            android:layout_centerVertical="true"
            android:layout_width="120dp"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_right"
            android:layout_width="20dp"
            android:layout_height="20dp"/>


    </RelativeLayout>
        <TextView
            android:layout_marginLeft="20dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/layout_version"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="版本信息"
                android:drawableLeft="@mipmap/icon_refresh"
                android:layout_centerVertical="true"
                android:layout_width="120dp"
                android:layout_height="40dp"/>
            <ImageView
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_right"
                android:layout_width="20dp"
                android:layout_height="20dp"/>


        </RelativeLayout>
    </LinearLayout>

    <Button
        android:textSize="19dp"
        android:textColor="@color/white"
        android:text="退出登录"
        android:background="@drawable/bg_button_style"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

</LinearLayout>