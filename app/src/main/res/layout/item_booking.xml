<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/gray"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/icon_id"
            android:text=""
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:text="已预约"
            android:textColor="@color/blue"
            android:textSize="17dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white">

        <TextView
            android:textColor="@color/bocop_dialog_bg"
            android:id="@+id/tv_bookingtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="15dp"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_ordernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="15dp"/>
    </RelativeLayout>

    <LinearLayout
        android:background="@color/bg_gray"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <com.example.administrator.cheshilishop.widget.roundedimageview.RoundedImageView
            android:id="@+id/img_logo"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            app:riv_corner_radius_bottom_left="5dp"
            app:riv_corner_radius_bottom_right="5dp"
            app:riv_corner_radius_top_left="5dp"
            app:riv_corner_radius_top_right="5dp"
            android:layout_margin="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_shopname"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/orange"
                android:textSize="17dp"/>

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_service"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="保养服务"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

</LinearLayout>