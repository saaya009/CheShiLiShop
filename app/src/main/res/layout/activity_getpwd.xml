<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/gray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_back"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/icon_back"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <ImageView
        android:src="@mipmap/icon_logo"
        android:id="@+id/img_logo"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="160dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"/>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <ImageView
        android:src="@mipmap/icon_phone"
        android:id="@+id/img_tel"
        android:layout_marginLeft="20dp"
        android:layout_width="35dp"
        android:layout_height="35dp"/>
    <EditText
        android:inputType="number"
        android:id="@+id/et_username"
        android:background="@null"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:hint="请输入电话号码"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@id/img_tel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_clear"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_button_clean"
            android:visibility="invisible"
            android:layout_width="20dp"
            android:layout_height="20dp" />

</RelativeLayout>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:src="@mipmap/icon_lock"
            android:id="@+id/img_pwd"
            android:layout_marginLeft="20dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_password"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:hint="请输入密码"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@id/img_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:src="@mipmap/icon_shield"
            android:id="@+id/img_yzm"
            android:layout_marginLeft="20dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <EditText
            android:inputType="number"
            android:id="@+id/et_yzm"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:hint="请输入手机验证码"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@id/img_yzm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_code"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_style"
            android:layout_width="100dp"
            android:layout_height="33dp"/>

    </RelativeLayout>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>


    <Button
        android:id="@+id/btn_login"
        android:text="修改"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_button_style"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>


    


</LinearLayout>