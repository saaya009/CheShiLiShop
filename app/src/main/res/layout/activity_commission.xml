<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:id="@+id/layout_main"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/topbar"/>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_time"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:drawableRight="@mipmap/icon_setting"
            android:text="2017-08"
            android:textSize="15dp"
            android:background="@drawable/bg_button_commission_style"
            android:layout_width="110dp"
            android:layout_height="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:text="佣金："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_yongjin"
            android:textSize="15dp"
            android:textColor="@color/orange"
            android:text="¥1998.89"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:text="历史累计佣金："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_leiji"
            android:textSize="15dp"
            android:text="¥1888998.89"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <TextView
        android:background="@color/gray"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:text="2017-7"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_margin="20dp"
        android:id="@+id/layout_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <ImageView
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_null"
            android:layout_width="180dp"
            android:layout_height="180dp"/>
        <TextView
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            android:text="暂时还没有相关记录哟"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_null"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="去首页"
            android:background="@drawable/bg_button_home_style"
            android:layout_width="100dp"
            android:layout_height="30dp"/>
    </LinearLayout>

    <com.example.administrator.cheshilishop.widget.refresh.MaterialRefreshLayout
        android:id="@+id/mrl_experience"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_btn"
        android:layout_marginBottom="10dp"
        app:isLoadMore="true"
        app:overlay="true"
        app:progress_show_arrow="true"
        app:wave_color="@android:color/transparent">
    <ListView
        android:id="@+id/lv_commission"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</com.example.administrator.cheshilishop.widget.refresh.MaterialRefreshLayout>




</LinearLayout>